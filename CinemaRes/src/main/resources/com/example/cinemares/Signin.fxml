            <children>
                <VBox alignment="CENTER" prefHeight="800.0" prefWidth="400.0" spacing="30.0" styleClass="white-background" stylesheets="@css/styles.css" HBox.hgrow="ALWAYS">
               <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="231.0" text="Register" textAlignment="CENTER" textFill="#16213e">
                            <font>
                                <Font size="40.0" />
                            </font>
                        </Label>
                        <Label alignment="CENTER" prefHeight="30.0" prefWidth="231.0" text="Don't have an account?" textAlignment="CENTER" textFill="#16213e">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" styleClass="sign-up-button-dark" stylesheets="@css/styles.css" text="Register" textAlignment="JUSTIFY" textFill="#16213e">
                            <font>
                                <Font size="25.0" />
                            </font>
                        </Button>
